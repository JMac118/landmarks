{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-var": "error",
    "prefer-const": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}
